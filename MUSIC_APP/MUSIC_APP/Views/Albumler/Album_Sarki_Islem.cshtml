@using Entity_Layer.Concrete
@model List<Sarkilar>
@{
    ViewBag.Title = "Album_Sarki_Islem";
    Layout = "~/Views/Shared/Yonetim_Layout.cshtml";
}

<h2>ŞARKI İŞLEMLER</h2>


<table class="table table-hover" style="border:4px; border-color:black;margin-top:20px;margin-bottom:20px;margin-left:20px">
    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">AD</th>
            <th scope="col">YIL</th>
            <th scope="col">GÜNCELLE</th>
            <th scope="col">SİL</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Sarki_Id</th>
                <td>@item.Sarki_Ad.ToUpper()</td>
                <td>@item.Sarki_Cikis_Yılı</td>
                <td> <a href="/Sarkilar/Sarki_Guncelle/@item.Sarki_Id" class="btn btn-warning"> Güncelle </a> </td>
                <td> <a href="/Sarkilar/Sarki_Sil" class="btn btn-danger"> Sil </a> </td>
               

            </tr>
        }


    </tbody>
</table>


