@using Entity_Layer.Concrete
@model List<Sarkilar>
@{
    ViewBag.Title = "sarki_Getir";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@Html.Partial("AlbumlerNavbarPartial");
<div style="border:30px">
 
    <h1>@ViewBag.ad</h1>
  
    <table class="table table-hover" style="border:4px; border-color:black;margin-top:20px;margin-bottom:20px;margin-left:20px">
        <thead>
            <tr>

                <th scope="col">ID</th>
                <th scope="col">AD</th>
                <th scope="col">SANATÇI ID</th>
                <th scope="col">ÇIKIŞ YIL</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Sarki_Id</th>
                    <td>@item.Sarki_Ad.ToUpper()</td>
                    <td>@ViewBag.ad</td>
                    <td>@item.Sarki_Cikis_Yılı</td>
                </tr>
            }


        </tbody>
    </table>

</div>
@Html.Partial("footer_partial");