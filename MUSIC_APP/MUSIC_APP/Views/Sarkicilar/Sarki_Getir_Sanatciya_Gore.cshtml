@using Entity_Layer.Concrete
@model IEnumerable<Sarkilar>
@{
    ViewBag.Title = "Sarki_Getir_Sanatciya_Gore";
    Layout = "~/Views/Shared/Yonetim_Layout.cshtml";
}

<h2>Sarki_Getir_Sanatciya_Gore</h2>

<div>
    <table class="table table-hover" style="border:4px; border-color:black;margin-top:20px;margin-bottom:20px;margin-left:20px">
        <thead>
            <tr>

                <th scope="col">ID</th>
                <th scope="col">AD</th>
                <th scope="col">SANATÇI ID</th>
                <th scope="col">ÇIKIŞ YIL</th>
                <th scope="col">DİNLENME</th>
                <th scope="col">GÜNCELLE</th>
                <th scope="col">SİL</th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Sarki_Id</th>
                    <td>@item.Sarki_Ad.ToUpper()</td>
                    <td>@item.Sarki_Sanatci_Id</td>
                    <td>@item.Sarki_Cikis_Yılı</td>
                    <td>@item.Sarki_Dinlenme_Sayi</td>
                    <td><a href="/Sarkilar/Sarki_Guncelle/@item.Sarki_Id" class="btn btn-warning"> GÜNCELLE </a></td>
                    <td><a href="#" class="btn btn-danger"> SİL </a></td>
                   

                </tr>
            }


        </tbody>
    </table>

</div>